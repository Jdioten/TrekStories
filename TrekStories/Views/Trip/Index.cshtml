@model IEnumerable<TrekStories.Models.Trip>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h3>My Trips</h3>
    <blockquote class="blockquote text-center hidden-xs">
        <p class="mb-0">The gladdest moment in human life, me thinks, is a departure into unknown lands.</p>
        <small class="blockquote-footer">Sir Richard Burton</small>
    </blockquote>
    <p class="hidden-xs"><a href="@Url.Action("Create")" class="btn btn-primary btn">Prepare the Next Adventure &raquo;</a></p>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalWalkingDistance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripOwner)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalWalkingDistance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripOwner)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TripId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TripId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TripId })
        </td>
    </tr>
}

</table>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="~/Images/@(item.TripCategory).jpg" alt="trip category picture" class="img-responsive">
                <div class="caption">
                    <h3>@item.Title</h3>
                    <p>...</p>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                </div>
            </div>
        </div>
    </div>
}

