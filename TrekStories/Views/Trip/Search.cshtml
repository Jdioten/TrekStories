@model IEnumerable<TrekStories.Models.Trip>

@{
    ViewBag.Title = "Search Trips";
}

<section>
    @Html.Partial("_SearchForm", (TrekStories.Models.TripSearchModel)ViewBag.PreviousSearch)
</section>
<section>
    <h3 style="margin-top:0;">Trips</h3>
    <div class="row display-flex">
        @foreach (var item in Model)
        {
            <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0 col-md-4 col-lg-3">
                <div class="thumbnail">
                    <img src="~/Images/@(item.TripCategory).jpg" alt="trip category picture" class="img-responsive">
                    <div class="caption">
                        <h3>@item.Title</h3>
                        <p>@item.Duration days in @item.Country&emsp;-&emsp;<em>@item.TotalWalkingDistance Km</em></p>
                        <p><a href="@Url.Action("Details", new { id = item.TripId })" class="btn btn-trekstories" role="button" style="width:100%;">MORE</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
    <br />
</section>