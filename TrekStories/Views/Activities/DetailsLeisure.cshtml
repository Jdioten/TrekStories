@model TrekStories.Models.LeisureActivity

@{
    ViewBag.Title = "Leisure Details";
}

<div class="mycontainer">
    <h2>Activity Details</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Step.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Step.Date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StartTime)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Notes)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Notes)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Back to Step", "Details", "Step", new { id = Model.StepId }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class= "btn btn-trekstories"}) |
        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmModal">
            Delete
        </button>   
    </p>

    <div class="modal" id="deleteConfirmModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Deleting an Activity</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this activity?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    @using (Html.BeginForm("Delete", "Activities", FormMethod.Post, new { @class = "inline-form"}))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("ActId", Model.ID)
                        <input type="submit" class="btn btn-danger" value="Delete Activity" style="display:inline;"/>
                    }
                </div>
            </div>
        </div>
    </div>

</div>